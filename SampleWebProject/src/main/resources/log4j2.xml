<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
  	<Console name="STDOUT" target="SYSTEM_OUT">
  		<PatternLayout pattern="%5p [%t] [%C] - %m%n"/>
  	</Console>
  </Appenders>
  <Loggers>
  	<Logger name="org.h2.jdbc" level="TRACE">
  		<Appender-ref ref="STDOUT"></Appender-ref>
  	</Logger>
    <Logger name="com.example.gnu.Mapper" level="TRACE">
		<Appender-ref ref="STDOUT"></Appender-ref>
    </Logger>
    <Root level="INFO">
		<Appender-ref ref="STDOUT"></Appender-ref>
    </Root>
  </Loggers>
</Configuration>